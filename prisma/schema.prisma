generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  balance   Float    @default(0)
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  creditCards CreditCard[] @relation("UserCards")
}

enum Role {
  USER
  ADMIN
}

model ValidCard {
  id         Int     @id @default(autoincrement())
  cardNumber String  @unique
  cvv        String
  expMonth   Int
  expYear    Int
}

model CreditCard {
  id         Int      @id @default(autoincrement())
  cardNumber String
  cvv        String
  expMonth   Int
  expYear    Int
  userId     Int
  createdAt  DateTime @default(now())

  user       User     @relation("UserCards", fields: [userId], references: [id])
}